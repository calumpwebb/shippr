{
  "name": "shippr",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "cli": "pnpm --filter @calumpwebb/shippr dev",
    "api": "pnpm --filter @shippr/api dev",
    "dev": "pnpm --parallel --filter @calumpwebb/shippr --filter @shippr/api dev",
    "db:generate": "pnpm --filter @shippr/db db:generate",
    "db:migrate": "pnpm --filter @shippr/db db:migrate",
    "db:studio": "pnpm --filter @shippr/db db:studio",
    "typecheck": "bun x tsc --build --noEmit",
    "lint": "eslint packages/",
    "lint:fix": "eslint packages/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "test": "pnpm -r run test"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": "prettier --write"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@testcontainers/postgresql": "^11.11.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "api": "^6.1.3",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  }
}
