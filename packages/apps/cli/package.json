{
  "name": "@calumpwebb/shippr",
  "version": "1.0.0",
  "description": "CLI for shippr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/calumpwebb/shippr.git",
    "directory": "packages/apps/cli"
  },
  "homepage": "https://github.com/calumpwebb/shippr#readme",
  "bugs": "https://github.com/calumpwebb/shippr/issues",
  "license": "MIT",
  "type": "module",
  "bin": {
    "shippr": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target node --packages bundle --external react-devtools-core --define process.env.NODE_ENV='\"production\"' && sed -i.bak 's|#!/usr/bin/env bun|#!/usr/bin/env node|' dist/index.js && sed -i.bak 's|import devtools from \"react-devtools-core\";|var devtools = { connect: () => ({ isConnected: false }) };|g' dist/index.js && rm -f dist/index.js.bak",
    "compile": "bun build src/index.tsx --compile --outfile shippr"
  },
  "dependencies": {
    "@trpc/client": "^11.8.1",
    "chalk": "^5.6.2",
    "ink": "^5.0.1",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "jose": "^6.1.3",
    "pino": "^10.1.0",
    "react": "^18.3.1",
    "superjson": "^2.2.6"
  },
  "devDependencies": {
    "@shippr/api": "workspace:*",
    "@types/react": "^18.3.12",
    "bun-types": "latest",
    "typescript": "^5.7.2"
  }
}
